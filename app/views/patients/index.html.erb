
<div class="container my-4">
<h1> Pacientes: <%= @patients.count %></h1>
  <table id="example" class="table table-striped table-bordered">
      <thead>
          <th>Nombre</th>
          <th>Apellido Paterno</th>
          <th>Apellido Materno</th>
          <th>Fecha de nacimiento</th>
          <th>Numero de emergencia</th>
          <th>Fase del padecimiento</th>
          <th colspan="3"></th>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td><%= patient.name %></td>
            <td><%= patient.p_lastname %></td>
            <td><%= patient.m_lastname %></td>
            <td><%= patient.birth %></td>
            <td><%= patient.emergency_number %></td>
            <td><%= patient.phase %></td>
            <td><%= link_to 'Detalle', patient , class: "btn btn-warning"%></td>
            <% if patient.user.id == current_user.id %>
            <td><%= link_to 'Editar', edit_patient_path(patient), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Eliminar', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="px-2 py-2 mb-5 text-center">
      <%= will_paginate @patients, :container => false %>
    </div>
    <br>
    <%= link_to 'New Patient', new_patient_path, class: "btn btn-info"%>
  </div>
